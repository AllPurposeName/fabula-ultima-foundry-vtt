<section class="equipment-tab">
  <section class="equipment-section">
    <h2>{{localize "EQUIPMENT.EQUIPMENT"}}</h2>
    <div class="may-equips">
      <b>{{localize "EQUIPMENT.MAY_EQUIP"}}</b>
      <input class="may-equip-checkbox" type="checkbox" name="system.equipment.mayEquip.martialArmor" {{checked this.actor.system.equipment.mayEquip.martialArmor}} />
      <label for="system.equipment.mayEquip.martialArmor">{{localize "EQUIPMENT.MARTIAL_ARMOR"}}</label>
      <input class="may-equip-checkbox" type="checkbox" name="system.equipment.mayEquip.martialShields" {{checked this.actor.system.equipment.mayEquip.martialShields}} />
      <label for="system.equipment.mayEquip.martialShields">{{localize "EQUIPMENT.MARTIAL_SHIELDS"}}</label>
      <input class="may-equip-checkbox" type="checkbox" name="system.equipment.mayEquip.martialMelee" {{checked this.actor.system.equipment.mayEquip.martialMelee}} />
      <label for="system.equipment.mayEquip.martialMelee">{{localize "EQUIPMENT.MARTIAL_MELEE"}}</label>
      <input class="may-equip-checkbox" type="checkbox" name="system.equipment.mayEquip.martialRanged" {{checked this.actor.system.equipment.mayEquip.martialRanged}} />
      <label for="system.equipment.mayEquip.martialRanged">{{localize "EQUIPMENT.MARTIAL_RANGED"}}</label>
    </div>
    <div class="equipped-items-and-descriptions">
      <div class="equipment-grid-item">
        <h3>{{localize "EQUIPMENT.EQUIPPED_ITEM"}}</h3>
        <div class="equipped-item-box">
          <span>{{localize "EQUIPMENT.ACCESSORY"}}</span>
          <input name="system.equipment.accessory" value="{{this.actor.system.equipment.accessory}}" tabindex="1">
        </div>
        <div class="equipped-item-box">
          <span>{{localize "EQUIPMENT.ARMOR"}}</span>
          <input name="system.equipment.armor" value="{{this.actor.system.equipment.armor}}" tabindex="3">
        </div>
        <div class="equipped-item-box">
          <span>{{localize "EQUIPMENT.MAIN_HAND"}}</span>
          <input name="system.equipment.mainHand" value="{{this.actor.system.equipment.mainHand}}" tabindex="5">
        </div>
        <div class="equipped-item-box">
          <span>{{localize "EQUIPMENT.OFF_HAND"}}</span>
          <input name="system.equipment.offHand" value="{{this.actor.system.equipment.offHand}}" tabindex="7">
        </div>
      </div>
      <div class="equipment-grid-item">
        <h3>{{localize "EQUIPMENT.DESCRIPTION"}}</h3>
        <div class="equipped-item-description">
          <textarea name="system.equipment.accessoryDescription" tabindex="2">{{this.actor.system.equipment.accessoryDescription}}</textarea>
        </div>
        <div class="equipped-item-description">
          <textarea name="system.equipment.armorDescription" tabindex="4">{{this.actor.system.equipment.armorDescription}}</textarea>
        </div>
        <div class="equipped-item-description">
          <textarea name="system.equipment.mainHandDescription" tabindex="6">{{this.actor.system.equipment.mainHandDescription}}</textarea>
        </div>
        <div class="equipped-item-description">
          <textarea name="system.equipment.offHandDescription" tabindex="8">{{this.actor.system.equipment.offHandDescription}}</textarea>
        </div>
      </div>
    </div>
  </section>
  <section class="backpack-section">
    <div>
      <h2>{{localize "EQUIPMENT.BACKPACK_AND_NOTES"}}</h2>
      <textarea name="system.equipment.backpackAndNotes">{{this.actor.system.equipment.backpackAndNotes}}</textarea>
    </div>
    {{> "systems/fabula-ultima/templates/actor/character/parts/zenit.hbs" }}
  </section>
</section>
